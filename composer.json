{
    "name": "vergecurrency/php-verge",
    "description": "A basic PHP library to talk to a VERGEd daemon to get you started in your VERGE project!",
    "type": "library",
    "authors": [
      {
          "name": "Verge"
      }
    ],
    "license": "GPL-2.0",
    "autoload": {
        "psr-4": {
            "VergeCurrency\\VergeClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "VergeCurrency\\VergeClient\\": "test/"
        }
    },
    "require": {
        "php": ">=7.0",
        "monolog/monolog": "^1.23",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpunit/phpunit": "^6",
        "squizlabs/php_codesniffer": "^3.1",
        "weemen/grumphp-psalm": "^0.0.5"
    },
    "minimum-stability": "stable"
}
